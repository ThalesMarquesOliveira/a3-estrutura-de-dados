package conexao_Mysql;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class conexaoLooker {

 private static final String URL   = "jdbc:mysql://sql10.freesqldatabase.com:3306/sql10783867";
 private static final String USER  = "sql10783867";
 private static final String PASS  = "x6gwFpVY9s";

 public static Connection getConexao() {
     try {
         // carrega o driver MySQL (desde JDBC 4+)
         Class.forName("com.mysql.cj.jdbc.Driver");
         // retorna a conexão propriamente dita
         return DriverManager.getConnection(URL, USER, PASS);
     }
     catch (ClassNotFoundException e) {
         throw new RuntimeException("Driver JDBC não encontrado.", e);
     }
     catch (SQLException e) {
         throw new RuntimeException("Erro ao conectar no banco de escrita.", e);
     }
 }
}
